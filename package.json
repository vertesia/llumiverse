{
    "name": "@llumiverse/parent",
    "version": "0.16.0",
    "private": true,
    "scripts": {
        "bump": "pnpm exec wst bump minor",
        "release": "pnpm -r publish --access public",
        "prepare": "cp ./README.md ./core/ && cp ./README.md ./drivers/",
        "build": "pnpm -r build"
    },
    "devDependencies": {
        "cross-spawn": "^7.0.5",
        "npm-ws-tools": "^0.3.0",
        "rollup": "^4.27.4",
        "typescript": "^5.6.2",
        "vitest": "^3.0.9"
    },
    "packageManager": "pnpm@10.6.2",
    "pnpm": {
        "overrides": {
            "rollup": "$rollup",
            "cross-spawn": "$cross-spawn",
            "vite@>=5.0.0 <=5.4.11": "^5.4.12"
        }
    }
}
