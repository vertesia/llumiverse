{
    "name": "@llumiverse/parent",
    "version": "0.22.0",
    "private": true,
    "scripts": {
        "bump": "pnpm exec wst bump minor",
        "eslint": "eslint '**/src/**/*.ts'",
        "release": "pnpm -r publish --access public",
        "prepare": "cp ./README.md ./core/ && cp ./README.md ./drivers/",
        "build": "pnpm -r build"
    },
    "devDependencies": {
        "cross-spawn": "^7.0.6",
        "eslint": "^9.35.0",
        "npm-ws-tools": "^0.3.0",
        "rollup": "^4.50.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0",
        "vitest": "^3.2.4"
    },
    "packageManager": "pnpm@10.8.1",
    "pnpm": {
        "overrides": {
            "rollup": "$rollup",
            "cross-spawn": "$cross-spawn",
            "brace-expansion@>=2.0.0 <3.0.0": "^2.0.2",
            "esbuild@<=0.24.2": "^0.25.9",
            "vite@>=6.0.0 <6.2.6": "^6.3.6",
            "form-data@<2.5.4": "^2.5.4",
            "form-data@>=4.0.0 <4.0.4": "^4.0.4"
        }
    }
}
